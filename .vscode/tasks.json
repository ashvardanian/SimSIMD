{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Benchmark: Debug",
            "command": "cmake -D CMAKE_BUILD_TYPE=Debug -D NK_BUILD_BENCH=1 -B build_debug && cmake --build build_debug --config Debug",
            "args": [],
            "type": "shell",
            "osx": {
                "environment": [
                    {
                        "name": "CXX",
                        "value": "$(brew --prefix llvm)/bin/clang++"
                    },
                    {
                        "name": "CC",
                        "value": "$(brew --prefix llvm)/bin/clang"
                    }
                ]
            }
        },
        {
            "label": "Build Test: Debug",
            "command": "cmake -D CMAKE_BUILD_TYPE=Debug -D NK_BUILD_TEST=1 -B build_debug && cmake --build build_debug --config Debug",
            "args": [],
            "type": "shell",
            "osx": {
                "environment": [
                    {
                        "name": "CXX",
                        "value": "$(brew --prefix llvm)/bin/clang++"
                    },
                    {
                        "name": "CC",
                        "value": "$(brew --prefix llvm)/bin/clang"
                    }
                ]
            }
        },
        {
            "label": "Build Benchmark: Release",
            "command": "cmake -D CMAKE_BUILD_TYPE=RelWithDebInfo -D NK_BUILD_BENCH=1 -B build_release && cmake --build build_release --config Release",
            "args": [],
            "type": "shell",
            "osx": {
                "environment": [
                    {
                        "name": "CXX",
                        "value": "$(brew --prefix llvm)/bin/clang++"
                    },
                    {
                        "name": "CC",
                        "value": "$(brew --prefix llvm)/bin/clang"
                    }
                ]
            }
        }
    ]
}