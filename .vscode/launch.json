    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Benchmark",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug/nk_bench",
            "cwd": "${workspaceFolder}",
            "args": [
                // "--benchmark_filter=\"intersect_u16_sve_128d\\^8192d\""
                "--benchmark_filter=nk_mahalanobis_f16_neon"
            ],
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0:atexit=1:strict_init_order=1:strict_string_checks=1"
                }
            ],
            "stopAtEntry": false,
            "preLaunchTask": "Build Benchmark: Debug",
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "type": "cppvsdbg",
                "program": "${workspaceFolder}/build_debug/nk_bench.exe"
            },
        },
        {
            "name": "Debug Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build_debug/nk_test",
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=0:atexit=1:strict_init_order=1:strict_string_checks=1"
                },
                {
                    "name": "NK_FILTER",
                    "value": "i4"
                }
            ],
            "stopAtEntry": false,
            "preLaunchTask": "Build Test: Debug",
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "Debug PyTest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "internalConsole",
            "args": [
                "${file}",
                "-s",
                "-x",
                "-k",
                "inner_bf16"
            ],
            "justMyCode": true
        }
    ]
}