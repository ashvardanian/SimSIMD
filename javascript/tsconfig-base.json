{
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "node-gyp-build.d.ts",
        "numkong.ts",
        "numkong-wasm.ts",
        "dtypes.ts"
    ],
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "inlineSourceMap": false,
        "lib": [
            "ES2020"
        ],
        "target": "ES2020",
        "listEmittedFiles": false,
        "listFiles": false,
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "strict": true,
        "traceResolution": false,
        "types": [
            "node",
            "./node-gyp-build.d.ts"
        ]
    }
}